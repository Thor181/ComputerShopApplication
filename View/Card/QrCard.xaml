<Window x:Class="ComputerShopApplication.View.Card.QrCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerShopApplication.View.Card"
        mc:Ignorable="d"
        Title="QR-Код" Height="450" Width="450" DataContext="{RelativeSource Self}" ResizeMode="NoResize">
    <Grid>
        <Image x:Name="QrCodePlace" Source="{Binding Image}" ></Image>
    </Grid>
</Window>
