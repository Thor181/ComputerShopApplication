<Page x:Class="ComputerShopApplication.View.Pages.AddPages.AddManufacturerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerShopApplication.View.Pages.AddPages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddManufacturerPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="NameTextbox" Style="{DynamicResource MaterialDesignOutlinedTextBox}" Background="White" Width="150" materialDesign:HintAssist.Hint="Производитель"/>
            <Button x:Name="AddButton" Style="{DynamicResource ButtonStandart}" Margin="10" Content="Добавить" Click="AddButton_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
